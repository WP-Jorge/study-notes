<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.cslg.applysystem.mapper.MajorMapper">
    <cache-ref namespace="cn.cslg.applysystem.mapper.MajorMapper"/>
    <cache-ref namespace="cn.cslg.applysystem.mapper.DeptMapper"/>
    <select id="getAllMajorsWithPage" resultType="cn.cslg.applysystem.pojo.vo.MajorVO" resultMap="majorResultMap">
        select * from major, dept where major.dept_id = dept.dept_id
    </select>

    <resultMap id="majorResultMap" type="cn.cslg.applysystem.pojo.vo.MajorVO">
        <id property="majorId" column="major_id"></id>
        <result property="majorName" column="major_name"></result>
        <result property="majorNo" column="major_no"></result>
        <association property="dept" javaType="cn.cslg.applysystem.pojo.vo.DeptVO" resultMap="deptResultMap"></association>
    </resultMap>

    <resultMap id="deptResultMap" type="cn.cslg.applysystem.pojo.vo.DeptVO">
        <id property="deptId" column="dept_id"></id>
        <result property="deptName" column="dept_name"></result>
    </resultMap>

    <select id="getAllMajors" resultType="cn.cslg.applysystem.pojo.vo.MajorVO" resultMap="majorResultMap">
        select * from major, dept where major.dept_id = dept.dept_id
    </select>

</mapper>
