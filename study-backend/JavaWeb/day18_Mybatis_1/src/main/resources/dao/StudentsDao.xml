<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.StudentsDao">
    <select id="getStudent" resultMap="StudentTeacher">
        select * from students
    </select>
    <resultMap id="StudentTeacher" type="domain.Students">
        <result property="id" column="id"></result>
        <result property="name" column="name"></result>
        <!--复杂属性，需要单独处理
            对象：association
            集合：collection
        -->
        <association property="teacher" column="tid" javaType="domain.Teacher" select="getTeacher"/>
    </resultMap>
    <select id="getTeacher" resultType="domain.Teacher">
        select * from teacher where tid = #{tid}
    </select>

    <!--按照结果嵌套处理-->
    <select id="getStudent2" resultMap="StudentTeacher2">
        select s.id sid, s.name sname, t.name tname, t.tid from students s, teacher t where s.tid = t.tid;
    </select>
    <resultMap id="StudentTeacher2" type="domain.Students">
        <result property="id" column="sid"></result>
        <result property="name" column="sname"></result>
        <association property="teacher" javaType="domain.Teacher">
            <result property="tid" column="tid"></result>
            <result property="name" column="tname"></result>
        </association>

    </resultMap>
</mapper>