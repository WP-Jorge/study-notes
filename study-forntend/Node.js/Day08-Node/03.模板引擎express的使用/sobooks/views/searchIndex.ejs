<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
		<title>野猪书库</title>
		<link rel="stylesheet" type="text/css" href="/css/styles.css"/>
	</head>
	<body>
		<div class="header">
			<div class="navheader"></div>
			<div class="nav">
				<div class="navlist">
					<a href="/"><div class="link">首页</div></a>
					<% for (let i = 0; i < cataory.length; i++) { %>
					<a href="/cataory/<%-cataory[i].cid%>/page/1"><div class="link"><%-cataory[i].cataory%></div></a>
					<% } %>
					<div class="search">
						<input id="search" type="text">
						<button class="searchBtn" type="button">搜索</button>
					</div>
				</div>
			</div>
		</div>
		<div class="content">
			<div class="bookList">
				<% for (let i = 0; i < books.length; i++) { %>
				<a href="/books/<%- books[i].id %>">
					<div class="bookItem">
						<img class="bookImg" src="<%- books[i].bookimg %>">
						<h3 class="title"><%- books[i].bookname %></h3>
						<p class="author"><%- books[i].author %></p>
						<div class="cataory"><%- books[i].cataory %></div>
					</div>
				</a>
				<% } %>
				
			</div>
			<div class="erweima">
				<h3>网络乞丐在线乞讨</h3>
				<img src="/img/微信支付.png">
				<img src="/img/支付宝支付.jpg">
			</div>
		</div>
		<div class="fenpage">
			<div class="pageBtns">
				<% if (currentPage > 1) { %>
					<a href="/search/<%- keyword %>/page/<%= (currentPage - 1) %>">上一页</a>
				<% } %>
					
				<% for (let i = startPage; i <= endPage; i++) { %>
					<a <% if (currentPage === i) { %> class="active" <% } %> href="/search/<%- keyword %>/page/<%= i %>"><%= i %></a>
				<% } %>
					
				<% if (currentPage < totalPage) { %>
					<a href="/search/<%- keyword %>/page/<%= (currentPage + 1) %>">下一页</a>
				<% } %>
			</div>
			<div class="allCount">共<%= totalPage %>页</div>
		</div>
		<script>
			let searchBtn = document.querySelector('.searchBtn')
			searchBtn.onclick = e => {
				let value = document.querySelector('#search').value
				location.href = '/search/' + value + '/page/1'
			}
			let input = document.querySelector('#search')
			input.onkeypress = e => {
				if (e.which === 13) {
					let value = document.querySelector('#search').value
					location.href = '/search/' + value + '/page/1'
				}
			}
		</script>
	</body>
</html>
