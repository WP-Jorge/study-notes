{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"allowJs": true
	},
	"include": ["src/**/*", "src/**/*.d.ts"],
	"exclude": ["node_modules", "dist", "public"]
}
