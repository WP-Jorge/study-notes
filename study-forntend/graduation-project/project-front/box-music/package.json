{
	"name": "box-music",
	"main": "dist/electron/main.js",
	"private": true,
	"version": "0.0.0",
	"author": "Jorge",
	"description": "A music player with Electron and Vue3",
	"scripts": {
		"dev": "chcp 65001 && vite",
		"build": "rimraf dist && rimraf dist_electron && vite build && electron-builder",
		"preview": "vite preview",
		"electron": "wait-on tcp:3000 && cross-env NODE_ENV=development electron .",
		"electron:serve": "concurrently -k \"pnpm run dev\" \"pnpm run electron\"",
		"electron:build": "vue-tsc --noEmit && rimraf dist && vite build && electron-builder"
	},
	"dependencies": {
		"@vueuse/core": "^8.6.0",
		"@vueuse/electron": "^8.7.3",
		"async": "^3.2.3",
		"axios": "^0.27.2",
		"electron-devtools-installer": "^3.2.0",
		"electron-store": "^8.0.2",
		"element-plus": "^2.2.6",
		"ffmpeg-static-electron": "^2.0.3",
		"ffprobe-static-electron": "^2.0.2",
		"fluent-ffmpeg": "^2.1.2",
		"isexe": "^2.0.0",
		"json-bigint": "^1.0.0",
		"nanoid": "^4.0.0",
		"pinia": "^2.0.13",
		"vue": "^3.2.25",
		"vue-router": "^4.0.14",
		"which": "^2.0.2"
	},
	"devDependencies": {
		"@iconify/json": "^2.1.57",
		"@types/json-bigint": "^1.0.1",
		"@types/node": "^17.0.31",
		"@typescript-eslint/eslint-plugin": "^5.21.0",
		"@typescript-eslint/parser": "^5.21.0",
		"@vitejs/plugin-vue": "^2.3.1",
		"concurrently": "^7.1.0",
		"cross-env": "^7.0.3",
		"electron": "^18.2.0",
		"electron-builder": "^23.0.3",
		"eslint": "^8.14.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-vue": "^8.7.1",
		"prettier": "^2.6.2",
		"rimraf": "^3.0.2",
		"sass": "^1.51.0",
		"typescript": "^4.5.4",
		"unplugin-auto-import": "^0.8.7",
		"unplugin-element-plus": "^0.4.0",
		"unplugin-icons": "^0.14.3",
		"unplugin-vue-components": "^0.19.3",
		"vite": "^2.9.5",
		"vite-plugin-electron": "^0.4.9",
		"vite-plugin-eslint": "^1.6.1",
		"vue-tsc": "^0.34.7",
		"wait-on": "^6.0.1"
	},
	"build": {
		"appId": "com.jorge.box-music",
		"productName": "盒子音乐",
		"copyright": "Copyright © 2022 <Jorge>",
		"asar": false,
		"win": {
			"icon": "dist/logo.ico"
		},
		"mac": {
			"category": "public.app-category.utilities"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true
		},
		"files": [
			"dist/**/*",
			"electron-main/**/*",
			"electron-preload/**/*"
		],
		"directories": {
			"buildResources": "dist",
			"output": "dist_electron"
		}
	}
}
