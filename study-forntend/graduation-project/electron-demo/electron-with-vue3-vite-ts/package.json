{
	"name": "electron-with-vue3-vite-ts",
	"main": "electron/main.ts",
	"private": true,
	"version": "0.0.0",
	"scripts": {
		"dev": "vite",
		"build": "vue-tsc --noEmit && vite build",
		"preview": "vite preview",
		"electron": "wait-on tcp:3000 && cross-env NODE_ENV=development electron .",
		"electron:serve": "concurrently -k \"pnpm run dev\" \"pnpm run electron\"",
		"electron:build": "vite build && electron-builder"
	},
	"build": {
		"appId": "electron-with-vue3-vite-ts",
		"productName": "electron-with-vue3-vite-ts",
		"copyright": "Copyright Â© 2021 electron-with-vue3-vite-ts",
		"mac": {
			"category": "public.app-category.utilities"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true
		},
		"files": [
			"dist/**/*",
			"electron/**/*"
		],
		"directories": {
			"buildResources": "assets",
			"output": "dist_electron"
		}
	},
	"dependencies": {
		"vue": "^3.2.25",
		"vue-router": "^4.0.12",
		"vuex": "^4.0.2"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.7.0",
		"@typescript-eslint/parser": "^5.7.0",
		"@vitejs/plugin-vue": "^2.2.0",
		"eslint": "^8.4.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-vue": "^8.2.0",
		"prettier": "^2.5.1",
		"concurrently": "^7.0.0",
		"cross-env": "^7.0.3",
		"electron": "16",
		"electron-builder": "^22.14.13",
		"sass": "^1.49.8",
		"typescript": "^4.5.4",
		"vite": "^2.8.0",
		"vite-plugin-eslint": "^1.3.0",
		"vue-tsc": "^0.29.8",
		"wait-on": "^6.0.1"
	}
}
